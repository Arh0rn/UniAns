{
    "manifest_version": 3,
    "name": "UniAns Hotkey Answer",
    "short_name": "UniAns",
    "version": "1.4.1",
    "description": "Get instant AI-powered answers for selected text using OpenAI. Just select text and press Alt+Shift+X.",
    "author": "A",
    "homepage_url": "https://github.com/Arh0rn/UniAns",
    "icons": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "action": {
        "default_popup": "src/popup.html",
        "default_title": "Get AI Answer",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "options_page": "src/settings.html",
    "permissions": [
        "activeTab",
        "scripting",
        "storage"
    ],
    "host_permissions": [
        "https://api.openai.com/*",
        "https://generativelanguage.googleapis.com/*"
    ],
    "commands": {
        "_execute_action": {
            "suggested_key": {
                "default": "Alt+Shift+X"
            },
            "description": "Get AI answer for selected text"
        }
    },
    "minimum_chrome_version": "88"
}